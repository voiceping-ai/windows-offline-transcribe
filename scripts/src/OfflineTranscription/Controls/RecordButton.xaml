<UserControl
    x:Class="OfflineTranscription.Controls.RecordButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Button x:Name="MainButton"
            Width="64" Height="64"
            CornerRadius="32"
            Padding="0"
            HorizontalAlignment="Center"
            Click="MainButton_Click">
        <Grid>
            <Ellipse x:Name="RecordCircle"
                     Width="48" Height="48"
                     Fill="Red" />
            <Rectangle x:Name="StopSquare"
                       Width="20" Height="20"
                       Fill="White"
                       RadiusX="2" RadiusY="2"
                       Visibility="Collapsed" />
        </Grid>
    </Button>
</UserControl>
