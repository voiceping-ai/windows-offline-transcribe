<Page
    x:Class="OfflineTranscription.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0" Text="History"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="24,16" />

        <ListView Grid.Row="1" x:Name="HistoryList"
                  Padding="16,0"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="HistoryList_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="*,Auto">
                        <StackPanel>
                            <TextBlock Text="{Binding Text}" MaxLines="2"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="14" />
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                <TextBlock FontSize="12" Opacity="0.5"
                                           Text="{Binding CreatedAt}" />
                                <TextBlock FontSize="12" Opacity="0.5"
                                           Text="{Binding ModelUsed}" />
                            </StackPanel>
                        </StackPanel>
                        <Button Grid.Column="1" VerticalAlignment="Center"
                                Click="DeleteButton_Click"
                                Tag="{Binding Id}"
                                ToolTipService.ToolTip="Delete">
                            <SymbolIcon Symbol="Delete" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Row="1" x:Name="EmptyText"
                   Text="No saved transcriptions yet."
                   Opacity="0.5"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Visibility="Collapsed" />
    </Grid>
</Page>
