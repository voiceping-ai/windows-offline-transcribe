<UserControl
    x:Class="OfflineTranscription.Controls.WaveformPlaybackControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="*,Auto">
        <Canvas x:Name="WaveformCanvas"
                Background="Transparent"
                PointerPressed="Canvas_PointerPressed"
                SizeChanged="Canvas_SizeChanged" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8"
                    HorizontalAlignment="Center" Margin="0,4">
            <Button x:Name="PlayPauseButton" Click="PlayPause_Click"
                    Width="36" Height="36" Padding="0">
                <SymbolIcon x:Name="PlayPauseIcon" Symbol="Play" />
            </Button>
            <TextBlock x:Name="PositionText" VerticalAlignment="Center"
                       FontSize="12" Opacity="0.6" Text="0:00 / 0:00" />
        </StackPanel>
    </Grid>
</UserControl>
