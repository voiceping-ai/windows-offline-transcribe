<Page
    x:Class="OfflineTranscription.Views.HistoryDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:OfflineTranscription.Controls"
    NavigationCacheMode="Disabled">

    <Grid RowDefinitions="Auto,*,Auto,Auto" Padding="24">

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock x:Name="DateText" Style="{StaticResource SubtitleTextBlockStyle}" />
            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                <TextBlock x:Name="ModelText" FontSize="12" Opacity="0.5" />
                <TextBlock x:Name="DurationText" FontSize="12" Opacity="0.5" />
                <TextBlock x:Name="LanguageText" FontSize="12" Opacity="0.5" />
            </StackPanel>
        </StackPanel>

        <!-- Full transcript -->
        <ScrollViewer Grid.Row="1">
            <TextBlock x:Name="TranscriptText"
                       TextWrapping="Wrap"
                       IsTextSelectionEnabled="True"
                       FontSize="15" />
        </ScrollViewer>

        <!-- Waveform playback (if audio available) -->
        <controls:WaveformPlaybackControl
            Grid.Row="2"
            x:Name="WaveformControl"
            Height="80"
            Margin="0,12"
            Visibility="Collapsed" />

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8"
                    HorizontalAlignment="Right">
            <Button Content="Copy Text" Click="CopyText_Click" />
            <Button Content="Export ZIP" Click="ExportZip_Click" />
        </StackPanel>
    </Grid>
</Page>
