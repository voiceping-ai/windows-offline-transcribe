<Page
    x:Class="OfflineTranscription.Views.ModelSetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,*,Auto" Padding="32">

        <StackPanel Grid.Row="0" Margin="0,24,0,24">
            <TextBlock Text="Offline Transcription"
                       Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="Select a model to get started. Models are downloaded once and work completely offline."
                       Opacity="0.7" Margin="0,8,0,0" TextWrapping="Wrap" />
        </StackPanel>

        <ListView Grid.Row="1" x:Name="ModelList"
                  SelectionMode="Single"
                  SelectionChanged="ModelList_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12" ColumnDefinitions="*,Auto">
                        <StackPanel>
                            <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Description}" FontSize="13" Opacity="0.7"
                                       TextWrapping="Wrap" Margin="0,4,0,0" />
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,6,0,0">
                                <TextBlock FontSize="12" Opacity="0.5">
                                    <Run Text="{Binding ParameterCount}" /> params
                                </TextBlock>
                                <TextBlock FontSize="12" Opacity="0.5" Text="{Binding SizeOnDisk}" />
                                <TextBlock FontSize="12" Opacity="0.5" Text="{Binding Languages}" />
                            </StackPanel>
                        </StackPanel>
                        <FontIcon Grid.Column="1" Glyph="&#xE896;"
                                  VerticalAlignment="Center" Opacity="0.4" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Loading overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" x:Name="LoadingOverlay"
              Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressRing IsActive="True" Width="48" Height="48" />
                <TextBlock x:Name="LoadingText" Margin="0,12,0,0"
                           HorizontalAlignment="Center" />
                <ProgressBar x:Name="LoadingProgress"
                             Maximum="1.0" Width="250" Margin="0,8,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
