<Page
    x:Class="OfflineTranscription.Views.TranscriptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:OfflineTranscription.Controls"
    Loaded="Page_Loaded">

    <Grid RowDefinitions="*,Auto,Auto,Auto">

        <!-- Transcription text area -->
        <ScrollViewer Grid.Row="0" Padding="16" VerticalScrollBarVisibility="Auto"
                      x:Name="TextScrollViewer">
            <StackPanel>
                <TextBlock x:Name="ConfirmedTextBlock"
                           TextWrapping="Wrap"
                           FontSize="16"
                           IsTextSelectionEnabled="True"
                           Text="{x:Bind VM.Service.ConfirmedText, Mode=OneWay}" />
                <TextBlock x:Name="HypothesisTextBlock"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Opacity="0.6"
                           FontStyle="Italic"
                           IsTextSelectionEnabled="True"
                           Text="{x:Bind VM.Service.HypothesisText, Mode=OneWay}" />
                <TextBlock x:Name="PlaceholderText"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Opacity="0.4"
                           Text="Press the record button to start transcribing..."
                           Visibility="{x:Bind ShowPlaceholder, Mode=OneWay}" />
            </StackPanel>
        </ScrollViewer>

        <!-- Audio visualizer + stats -->
        <StackPanel Grid.Row="1" Padding="16,4">
            <controls:AudioVisualizerControl
                x:Name="Visualizer"
                Height="60"
                Margin="0,0,0,8" />

            <Grid ColumnDefinitions="*,*">
                <TextBlock Grid.Column="0" FontSize="12" Opacity="0.7"
                           Text="{x:Bind StatsText, Mode=OneWay}" />
                <TextBlock Grid.Column="1" FontSize="12" Opacity="0.7"
                           HorizontalAlignment="Right"
                           Text="{x:Bind ResourceText, Mode=OneWay}" />
            </Grid>

            <TextBlock FontSize="12" Opacity="0.5" Margin="0,2,0,0"
                       Text="{x:Bind ModelInfoText, Mode=OneWay}" />
        </StackPanel>

        <!-- Loading overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2"
              Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
              Visibility="{x:Bind ShowLoadingOverlay, Mode=OneWay}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressRing IsActive="True" Width="48" Height="48" />
                <TextBlock Text="{x:Bind VM.Service.LoadingStatusMessage, Mode=OneWay}"
                           Margin="0,12,0,0" HorizontalAlignment="Center" />
                <ProgressBar Value="{x:Bind VM.Service.DownloadProgress, Mode=OneWay}"
                             Maximum="1.0" Width="200" Margin="0,8,0,0"
                             Visibility="{x:Bind ShowDownloadProgress, Mode=OneWay}" />
            </StackPanel>
        </Grid>

        <!-- Bottom toolbar -->
        <Grid Grid.Row="3" Padding="16,8" ColumnDefinitions="Auto,Auto,*,Auto">
            <Button Grid.Column="0"
                    Command="{x:Bind VM.TranscribeFileCommand}"
                    ToolTipService.ToolTip="Transcribe audio file">
                <SymbolIcon Symbol="OpenFile" />
            </Button>

            <Button x:Name="TestAudioButton" Grid.Column="1" Margin="8,0,0,0"
                    Command="{x:Bind VM.TranscribeTestAudioCommand}"
                    ToolTipService.ToolTip="Transcribe embedded test audio">
                <SymbolIcon Symbol="Play" />
            </Button>

            <controls:RecordButton
                Grid.Column="2"
                HorizontalAlignment="Center"
                IsRecording="{x:Bind VM.IsRecording, Mode=OneWay}"
                Click="RecordButton_Click" />

            <Button Grid.Column="3"
                    Click="SettingsButton_Click"
                    ToolTipService.ToolTip="Settings">
                <SymbolIcon Symbol="Setting" />
            </Button>
        </Grid>
    </Grid>
</Page>
